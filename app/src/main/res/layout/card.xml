<?xml version="1.0" encoding="utf-8"?>


    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <ImageView
                  android:id="@+id/jobProfileImg"
                  android:layout_width="70dp"
                  android:layout_height="70dp"
                  android:layout_weight="1"
                  android:layout_gravity="center"
                  android:src="@drawable/logo"
                  />
              <LinearLayout
                  android:id="@+id/goTodetailBtn"
                  android:layout_width="wrap_content"
                 android:layout_weight="4"
                  android:layout_marginTop="5dp"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
                  <TextView
                      android:id="@+id/job_title_text"
                      android:layout_marginStart="5dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                     android:textColor="?attr/colorAccent"
                      android:text="Bussiness development executive->"
                      android:textSize="15sp"
                      android:textStyle="bold"/>
                  <TextView
                      android:id="@+id/job_second_title_text"
                      android:layout_marginStart="5dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="?attr/colorAccent"
                      android:text="ISO Jobs"
                      android:textSize="14sp"
                      android:textStyle="bold"/>
                  <TextView
                      android:id="@+id/job_desc_text"
                      android:layout_marginStart="5dp"
                    android:textColor="?attr/colorAccent"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Job description"
                      />
                  <TextView
                      android:id="@+id/salary_text"
                      android:layout_marginStart="5dp"
                      android:layout_width="wrap_content"
                     android:textColor="?attr/colorTertiary"
                      android:layout_height="wrap_content"
                      android:text="Salary-12000"/>
              </LinearLayout>

              <ImageView
                  android:id="@+id/bookmark_img"
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:layout_margin="5dp"
                  android:src="@drawable/baseline_bookmark_add_24"
                  />

          </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="?attr/colorTertiary"
                />

            <LinearLayout

                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorPrimary"
                    android:id="@+id/locationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/baseline_location_on_24"
                    android:text="Virudhunagar"
                    android:padding="5dp"
                    android:textSize="12sp"
                  android:textStyle="bold"
                    />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:textAllCaps="false"
                    android:id="@+id/contactNo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="12sp"
                   android:textStyle="bold"
                    app:icon="@drawable/baseline_local_phone_24"
                    android:text=": 353536e63"/>


            </LinearLayout>


        <LinearLayout


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:textAllCaps="false"
                android:layout_marginLeft="10dp"
                android:id="@+id/experienceText"
               android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Experience:1year"/>




        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/colorTertiary"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/txt_btn_with_icon"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  android:layout_marginStart="10dp"
                    android:text="Chat"
                   />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:id="@+id/icon_btn"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:text="Call HR"
                    app:icon="@drawable/baseline_local_phone_24"
                    app:iconPadding="8dp"/>

            </LinearLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

